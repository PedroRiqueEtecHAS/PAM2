<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Nodes.AboutPage"
             Title="AboutPage">
    <VerticalStackLayout Spacing="10" Margin="10">
        <HorizontalStackLayout Spacing="10">
            <Image Source="dotnet_bot.png"
                   SemanticProperties.Description="The dot net bot waving hello!"
                   HeightRequest="64"></Image>
            <Label FontSize="22" Text="v1.0" VerticalOptions="End"></Label>
        </HorizontalStackLayout>
        <Label Text="This app is written in XAML and c# with .NET MAUI."></Label>
        <Button Text="Learn more..." Clicked="LearnMore_Clicked"></Button>
        </VerticalStackLayout>

</ContentPage>